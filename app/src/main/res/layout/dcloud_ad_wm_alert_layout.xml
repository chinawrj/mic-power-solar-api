<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/dcloud_ad_wm_alert_background_shape"
    android:paddingLeft="16dp"
    android:paddingTop="32dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="18sp"
        android:textColor="#222222"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="40dp"
        android:text="请在微信小程序中观看广告"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#aaaaaa"
            android:id="@+id/dcloud_ad_wm_abandon"
            android:background="@drawable/dcloud_ad_wm_btn_clicked_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="放弃"
            android:layout_weight="1"/>
        <Button
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#336699"
            android:id="@+id/dcloud_ad_wm_close"
            android:background="@drawable/dcloud_ad_wm_btn_clicked_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我已观看"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
